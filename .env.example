# ===================================
# 17 @ Peppertree - Environment Variables
# ===================================

# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains sensitive information!

# ================
# DATABASE CONFIG
# ================
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/peppertree
POSTGRES_PASSWORD=your_secure_postgres_password

# ================
# SECURITY
# ================
SECRET_KEY=your_super_secure_secret_key_change_this_in_production
REDIS_PASSWORD=your_redis_password

# ================
# EMAIL CONFIG
# ================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
OWNER_EMAIL=owner@peppertree.co.za

# ================
# APPLICATION CONFIG
# ================
REACT_APP_API_URL=http://localhost:5000/api

# ================
# DOCKER CONFIG
# ================
DOCKER_HUB_USERNAME=your-dockerhub-username

# ================
# DEPLOYMENT CONFIG
# ================
# Production server details (for CI/CD)
PRODUCTION_HOST=your-production-server.com
PRODUCTION_USERNAME=deploy
PRODUCTION_SSH_PORT=22

# Staging server details (for CI/CD)
STAGING_HOST=staging.your-domain.com
STAGING_USERNAME=deploy
STAGING_SSH_PORT=22

# ================
# MONITORING & NOTIFICATIONS
# ================
# Optional: Slack webhook for deployment notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: Error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================
# SSL/HTTPS CONFIG
# ================
# Your domain name(s)
DOMAIN_NAME=peppertree.co.za
DOMAIN_WWW=www.peppertree.co.za

# ================
# BACKUP CONFIG
# ================
# AWS S3 credentials for backup storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=peppertree-backups
AWS_REGION=af-south-1

# ================
# DEVELOPMENT CONFIG
# ================
# Flask environment
FLASK_ENV=development
FLASK_DEBUG=1

# Node environment
NODE_ENV=development

# ================
# EXTERNAL SERVICES
# ================
# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Google Maps API (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ================
# RATE LIMITING
# ================
# API rate limits (requests per minute)
RATE_LIMIT_API=60
RATE_LIMIT_GENERAL=200

# ================
# FILE UPLOAD LIMITS
# ================
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes